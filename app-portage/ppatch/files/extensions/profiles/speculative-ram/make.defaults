# low RAM. no -pipe, etc
_FLAGS="$_FLAGS$CFLAGS_NATIVE$CFLAGS_M -flimit-function-alignment -Wa,--reduce-memory-overheads"
# ? -fconserve-stack

USE="speculative -ssp nossp nopie -sanitize -vtv -pie -pic"

CFLAGS="$_FLAGS"
FFLAGS="$_FLAGS"
FCFLAGS="$_FLAGS"
CXXFLAGS="$_FLAGS -fvisibility-inlines-hidden -fdeclone-ctor-dtor -fpermissive -w"
#LDFLAGS="-Wl,-O1 -Wl,--as-needed -Wl,--hash-style=gnu -Wl,--sort-common"
LDFLAGS="$LDFLAGS -Wl,--no-keep-memory -Wl,--reduce-memory-overheads"
