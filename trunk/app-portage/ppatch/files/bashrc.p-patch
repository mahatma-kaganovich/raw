$etc||="$ENV{SS}/etc";
$rc="$etc/portage/bashrc";
wf(">$rc",'') if(!-e $rc);
addon($rc,'#',"ppatch auto",qq(PPATCHDIR="\${PPATCH_ROOT:-\${PORTAGE_CONFIGROOT:-\$ROOT}}/usr/ppatch"
for PPATCH in \$CATEGORY/\$PN \$PN \$PROVIDE ; do\
PPATCH="\$PPATCHDIR/\$PPATCH/\$EBUILD_PHASE/"
if [[ -n "\$EBUILD_PHASE" && -e "\$PPATCH" ]] ; then
	[[ -e "\$PPATCH/bashrc" ]] && source "\$PPATCH/bashrc"
	export PPATCH PPATCHDIR S
	`p-patch \$PPATCH`
fi
done),0);